<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_horizontal">

        <!--    Card    -->

        <androidx.cardview.widget.CardView
            android:id="@+id/card_destination"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:layout_marginTop="@dimen/card_margin_top"
            android:paddingHorizontal="@dimen/padding_horizontal"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <ImageView
                android:id="@+id/img_mountain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:src="@drawable/landscape" />

            <ImageButton
                android:id="@+id/btn_left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_button_margin"
                android:layout_marginTop="@dimen/card_button_margin_top"
                android:background="@drawable/ellipse"
                android:src="@drawable/icon_arrow_left" />

            <ImageButton
                android:id="@+id/btn_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/card_button_margin_top"
                android:layout_marginEnd="@dimen/card_button_margin"
                android:background="@drawable/ellipse"
                android:src="@drawable/icon_bookmark" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_frame_height"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/card_button_margin"
                android:layout_marginBottom="@dimen/card_padding_horizontal"
                app:cardBackgroundColor="@color/eerie_black_40"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <!--            Frame       -->
                <FrameLayout
                    android:id="@+id/frame_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/card_frame_margin_horizontal"
                    android:layout_marginVertical="@dimen/card_frame_margin_vertical">

                    <TextView
                        android:id="@+id/text_andes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/white"
                        android:textSize="@dimen/frame_andes_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/chinese_silver"
                        android:textSize="@dimen/frame_price_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_marker" />

                        <TextView
                            android:id="@+id/text_south_america"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/small_margin"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/chinese_silver"
                            android:textSize="@dimen/frame_location_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom">

                        <TextView
                            android:id="@+id/text_dollar_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/arsenic"
                            android:textSize="@dimen/frame_sign_size" />

                        <TextView
                            android:id="@+id/text_230"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/chinese_silver"
                            android:textSize="@dimen/frame_price_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <!--    Nav     -->
        <LinearLayout
            android:id="@+id/nav_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_distance_margin_top">

            <TextView
                android:id="@+id/text_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/nav_active_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/nav_distance_margin" />
        </LinearLayout>

        <!--      Info      -->

        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_distance_margin_top">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:src="@drawable/icon_clock" />

                <TextView
                    android:id="@+id/text_8_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/xs_margin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:src="@drawable/icon_cloud" />

                <TextView
                    android:id="@+id/text_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/xs_margin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:src="@drawable/icon_star" />

                <TextView
                    android:id="@+id/text_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/xs_margin" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_distance_margin_top"
            android:textSize="20sp" />
        <!--    Button  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/nav_distance_margin_top"
            android:layout_marginBottom="@dimen/big_margin"
            android:background="@color/black"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/big_margin"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_book_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/frame_sign_size"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/frame_sign_size"
                    android:src="@drawable/icon_send" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>