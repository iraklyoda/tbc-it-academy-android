<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_background"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        app:cardBackgroundColor="@color/anti_flash_white"
        app:cardCornerRadius="@dimen/radius_md"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/model_01"
        android:contentDescription="@string/product_picture"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_item_background"
        app:layout_constraintEnd_toEndOf="@+id/cv_item_background"
        app:layout_constraintTop_toTopOf="@+id/cv_item_background" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_oval"
        android:src="@drawable/ic_heart"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_item_background"
        app:layout_constraintEnd_toEndOf="@+id/cv_item_background"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/cv_item_background"
        app:layout_constraintTop_toTopOf="@+id/cv_item_background"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/test_suit_blazer"
        android:textColor="@color/cadet_gray"
        app:layout_constraintStart_toStartOf="@+id/cv_item_background"
        app:layout_constraintTop_toBottomOf="@+id/cv_item_background" />


    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_item_title"
        app:layout_constraintStart_toStartOf="@id/tv_item_title"
        android:textColor="@color/white"
        android:text="@string/_120"
        android:layout_marginTop="6dp" />


</androidx.constraintlayout.widget.ConstraintLayout>