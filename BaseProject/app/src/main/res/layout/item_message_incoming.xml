<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_sm"
        android:layout_marginTop="@dimen/distance_md"
        android:background="@drawable/input_background"
        android:fontFamily="@font/pt_sans"
        android:paddingVertical="@dimen/distance_sm2"
        android:paddingStart="@dimen/distance_sm2"
        android:paddingEnd="@dimen/distance_sm2"
        android:text="@string/hello_how_can_i_help_you"
        app:layout_constraintStart_toStartOf="@id/iv_triangle"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/polygon_shape"
        android:src="@drawable/shape_polygon"
        app:layout_constraintBottom_toBottomOf="@id/tv_message"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/pt_sans_light"
        android:text="@string/today_7_02pm"
        android:textColor="@color/cadet_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_message" />


</androidx.constraintlayout.widget.ConstraintLayout>