<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#000000" /> <!-- Black color for the checked state -->
            <size android:width="50dp" android:height="50dp" /> <!-- Larger size for checked -->
        </shape>
    </item>

    <!-- Unchecked state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- White color for unchecked state -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Black border -->
            <size android:width="40dp" android:height="40dp" /> <!-- Smaller size for unchecked -->
        </shape>
    </item>
</selector>