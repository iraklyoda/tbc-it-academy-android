<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/distance_md"
    android:background="@color/white"
    >

    <ImageButton
        android:id="@+id/btn_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_md"
        android:background="@android:color/transparent"
        android:contentDescription="@string/return_button"
        android:src="@drawable/icon_back_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_lg"
        android:fontFamily="@font/comforta"
        android:text="@string/register"
        android:textSize="@dimen/text_lg"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:id="@+id/layout_step_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_lg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_md"
            android:autofillHints="emailAddress"
            android:background="@drawable/input_background"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/distance_md" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_md"
            android:layout_marginTop="@dimen/distance_md"
            android:autofillHints="password"
            android:background="@drawable/input_background"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/distance_md" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_md"
            android:layout_marginTop="@dimen/distance_md"
            android:background="@drawable/dark_btn_background"
            android:text="@string/next_uppercase"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_step_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_md"
            android:layout_marginTop="@dimen/distance_md"
            android:autofillHints="password"
            android:background="@drawable/input_background"
            android:hint="@string/username"
            android:inputType="text"
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/distance_md" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_md"
            android:layout_marginTop="@dimen/distance_md"
            android:background="@drawable/dark_btn_background"
            android:text="@string/sign_up_uppercase"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/by_signing_up_you_agree_to_photo_s_terms_of_service_and_privacy_policy"
            android:textSize="@dimen/text_sm"
            android:layout_marginTop="@dimen/distance_lg" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>