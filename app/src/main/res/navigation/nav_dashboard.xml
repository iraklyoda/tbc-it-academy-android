<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_dashboard"
    app:startDestination="@id/homeNestedGraph">

    <navigation android:id="@+id/articlesNestedGraph" app:startDestination="@id/articlesFragment">

        <fragment
            android:id="@+id/articlesFragment"
            android:name="com.example.tricholog.ui.dashboard.articles.ArticlesFragment"
            android:label="fragment_articles"
            tools:layout="@layout/fragment_articles" >

            <action
                android:id="@+id/action_articlesFragment_to_articleFragment"
                app:destination="@id/articleFragment" />
        </fragment>

        <fragment
            android:id="@+id/articleFragment"
            android:name="com.example.tricholog.ui.dashboard.articles.article.ArticleFragment"
            android:label="fragment_article"
            tools:layout="@layout/fragment_article" >
            <argument
                android:name="id"
                app:argType="string" />
        </fragment>
    </navigation>


    <navigation android:id="@+id/logsNestedGraph" app:startDestination="@id/logsFragment">

        <fragment
            android:id="@+id/logsFragment"
            android:name="com.example.tricholog.ui.dashboard.logs.display.LogsFragment"
            android:label="fragment_logs"
            tools:layout="@layout/fragment_logs" >
            <action
                android:id="@+id/action_logsFragment_to_createLogFragment"
                app:destination="@id/createLogFragment" />
        </fragment>

        <fragment
            android:id="@+id/createLogFragment"
            android:name="com.example.tricholog.ui.dashboard.logs.create.CreateLogFragment"
            android:label="fragment_create_log"
            tools:layout="@layout/fragment_create_log" />

    </navigation>

    <navigation android:id="@+id/homeNestedGraph" app:startDestination="@id/homeFragment">

        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.tricholog.ui.dashboard.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home" >
            <action
                android:id="@+id/action_homeFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
        </fragment>

        <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.tricholog.ui.dashboard.home.profile.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile" >
            <action
                android:id="@+id/action_profileFragment_to_welcomeFragment2"
                app:destination="@id/welcomeFragment2"
                app:popUpTo="@id/homeFragment"
                app:popUpToInclusive="true" />
        </fragment>

        <fragment
            android:id="@+id/welcomeFragment2"
            android:name="com.example.tricholog.ui.landing.WelcomeFragment"
            android:label="fragment_welcome"
            tools:layout="@layout/fragment_welcome" />
    </navigation>



</navigation>