<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/locationsFragment">

    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.example.baseproject.ui.locations.LocationsFragment"
        android:label="fragment_locations"
        tools:layout="@layout/fragment_locations" >
        <action
            android:id="@+id/action_locationsFragment_to_markerInfoBottomSheetDialogFragment"
            app:destination="@id/markerInfoBottomSheetDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/markerInfoBottomSheetDialogFragment"
        android:name="com.example.baseproject.ui.locations.MarkerInfoBottomSheetDialogFragment"
        android:label="fragment_marker_info_bottom_sheet_dialog"
        tools:layout="@layout/fragment_marker_info_bottom_sheet_dialog" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="body"
            app:argType="string" />
    </dialog>
</navigation>