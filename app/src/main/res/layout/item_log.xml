<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/distance_md"
    android:background="@drawable/log_background"
    android:paddingBottom="@dimen/distance_sm"
    android:layout_marginBottom="@dimen/distance_md"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_trigger"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/text_md"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_md"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Trigger" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_trigger"
        android:layout_marginTop="@dimen/distance_sm"
        android:text="Body of the trigger"
        android:textSize="16sp"
        android:id="@+id/tv_body" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_sm"
        app:layout_constraintStart_toStartOf="parent"
        android:text="date" />

</androidx.constraintlayout.widget.ConstraintLayout>