<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/item_card_mastercard_bg"
        android:elevation="2dp"
        android:src="@drawable/mastercard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/card_type_icon"
        android:src="@drawable/ic_mastercard"
        android:translationZ="3dp"
        app:layout_constraintEnd_toEndOf="@id/iv_card"
        app:layout_constraintTop_toTopOf="@id/iv_card" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish"
        android:letterSpacing="0.3"
        android:text="@string/empty_card"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationZ="3dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_card"
        app:layout_constraintEnd_toEndOf="@id/iv_card"
        app:layout_constraintStart_toStartOf="@id/iv_card"
        app:layout_constraintTop_toTopOf="@id/iv_card"
        app:layout_constraintVertical_bias="0.6" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_cardholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/mulish_bold"
        android:text="@string/cardholder_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_card"
        app:layout_constraintStart_toStartOf="@id/iv_card" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_cardholder"
        app:layout_constraintStart_toStartOf="@id/text_cardholder"
        android:translationZ="3dp"
        android:textColor="@color/white"
        android:fontFamily="@font/mulish_semi_bold"
        android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_valid_thru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valid_thru"
        android:translationZ="3dp"
        app:layout_constraintTop_toTopOf="@id/text_cardholder"
        android:textSize="9sp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/mulish_semi_bold"
        app:layout_constraintEnd_toEndOf="@id/iv_card"
        android:textColor="@color/white"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_expire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/text_valid_thru"
        app:layout_constraintEnd_toEndOf="@id/text_valid_thru"
        android:translationZ="3dp"
        android:text="@string/expire"
        android:textColor="@color/white"
        android:fontFamily="@font/mulish_semi_bold"
        android:textSize="9sp"
        android:layout_marginTop="4dp"
        tools:ignore="HardcodedText,SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>