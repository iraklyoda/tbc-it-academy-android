<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gunmetal"
    tools:context=".presentation.StatisticsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_prod_bold"
        android:text="@string/statistics"
        android:layout_marginStart="50dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/vp2"
        android:layout_marginVertical="20dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/vp2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2"
        android:layout_width="0dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        app:layout_constraintBottom_toTopOf="@id/iv_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ProgressBar
        android:id="@+id/pb_statistics"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/vp2"
        app:layout_constraintEnd_toEndOf="@id/vp2"
        app:layout_constraintStart_toStartOf="@id/vp2"
        app:layout_constraintBottom_toBottomOf="@id/vp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_menu"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>