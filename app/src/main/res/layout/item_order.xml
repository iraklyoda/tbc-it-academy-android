<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_bg"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="12dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_order"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@drawable/order_img_bg"
        android:contentDescription="@string/product_picture"
        android:scaleType="centerCrop"
        android:src="@drawable/chair_001"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Lawson Chair"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_order"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/iv_color"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_circle"
        app:layout_constraintStart_toStartOf="@id/txt_order_name"
        app:layout_constraintTop_toBottomOf="@id/txt_order_name" />

    <TextView
        android:id="@+id/txt_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Red"
        android:textColor="@color/platinum"
        app:layout_constraintBottom_toBottomOf="@id/iv_color"
        app:layout_constraintStart_toEndOf="@id/iv_color" />

    <TextView
        android:id="@+id/txt_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qty"
        android:textColor="@color/platinum"
        app:layout_constraintStart_toEndOf="@id/txt_color"
        app:layout_constraintTop_toTopOf="@id/txt_color" />

    <TextView
        android:id="@+id/txt_qty_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="1"
        android:textColor="@color/platinum"
        app:layout_constraintStart_toEndOf="@id/txt_qty"
        app:layout_constraintTop_toTopOf="@id/txt_qty" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/status_bg"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="In Delivery"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/txt_order_name"
        app:layout_constraintTop_toBottomOf="@id/iv_color" />

    <TextView
        android:id="@+id/txt_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_order"
        app:layout_constraintStart_toStartOf="@id/txt_order_name" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120.00"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/txt_currency"
        app:layout_constraintTop_toTopOf="@id/txt_currency" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/order_img_bg"
        android:paddingHorizontal="20dp"
        android:text="Track Order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_price" />


</androidx.constraintlayout.widget.ConstraintLayout>