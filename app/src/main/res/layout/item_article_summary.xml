<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/distance_md"
    android:layout_height="wrap_content"
    android:background="@drawable/article_background"
    android:paddingHorizontal="@dimen/distance_md"
    android:paddingBottom="@dimen/distance_sm">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_sm"
        android:text="Title"
        android:textSize="@dimen/text_md"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary of the article"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_author"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="author"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_summary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_read_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read time:"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_author" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_read_time_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="2"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_read_time"
        app:layout_constraintStart_toEndOf="@id/tv_read_time" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/min"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_read_time"
        app:layout_constraintStart_toEndOf="@id/tv_read_time_min" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:paddingHorizontal="@dimen/distance_md"
        android:layout_height="30dp"
        android:background="@drawable/btn_background"
        android:text="@string/read_more"
        android:textAllCaps="false"
        android:textColor="@color/mountain_lake_green"
        app:layout_constraintBottom_toBottomOf="@id/tv_read_time_min"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>