<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:inputType="none"
        android:focusable="false"
        android:hint="@string/username"
        android:paddingHorizontal="@dimen/distance_sm"
        android:paddingVertical="@dimen/distance_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_user"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="@id/et_field"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/et_field"
        app:layout_constraintTop_toTopOf="@id/et_field" />

    <View
        android:id="@+id/view_line"
        app:layout_constraintTop_toBottomOf="@id/et_field"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey_60"
        />

</androidx.constraintlayout.widget.ConstraintLayout>