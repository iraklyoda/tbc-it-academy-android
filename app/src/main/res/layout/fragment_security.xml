<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cultured"
    tools:context=".presentation.SecurityFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_md"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/security_screen"
        android:textSize="@dimen/text_lg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_enter_passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_lg"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/enter_your_passcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header" />

    <View
        android:layout_marginTop="@dimen/distance_md"
        android:id="@+id/view_dot_1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="94dp"
        android:background="@drawable/oval"
        app:layout_constraintEnd_toStartOf="@id/view_dot_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_passcode" />

    <View
        android:id="@+id/view_dot_2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toStartOf="@id/view_dot_3"
        android:background="@drawable/oval"
        app:layout_constraintStart_toEndOf="@id/view_dot_1"
        app:layout_constraintTop_toTopOf="@id/view_dot_1" />

    <View
        android:id="@+id/view_dot_3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/oval"
        app:layout_constraintStart_toEndOf="@id/view_dot_2"
        app:layout_constraintEnd_toStartOf="@id/view_dot_4"
        app:layout_constraintTop_toTopOf="@id/view_dot_1" />

    <View
        android:id="@+id/view_dot_4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/oval"
        app:layout_constraintStart_toEndOf="@id/view_dot_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="94dp"
        app:layout_constraintTop_toTopOf="@id/view_dot_1" />

    <GridLayout
        android:id="@+id/gl_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_lg"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_dot_1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_1"
            style="@style/key_btn"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_2"
            style="@style/key_btn"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_3"
            style="@style/key_btn"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_4"
            style="@style/key_btn"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_5"
            style="@style/key_btn"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_6"
            style="@style/key_btn"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_7"
            style="@style/key_btn"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_8"
            style="@style/key_btn"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_9"
            style="@style/key_btn"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_fingerprint"
            style="@style/key_btn"
            android:background="@drawable/key_bg"
            android:src="@drawable/ic_fingerprint" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_key_0"
            style="@style/key_btn"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_remove"
            style="@style/key_btn"
            android:background="@drawable/key_bg"
            android:src="@drawable/baseline_backspace_24" />

    </GridLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/forgot_password"
        android:layout_marginBottom="@dimen/distance_md"
        android:textSize="@dimen/text_md"
        android:textColor="@color/philippine_gray"
        android:fontFamily="@font/poppins_regular"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/light_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/light_03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/light_02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>