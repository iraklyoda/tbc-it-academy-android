<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transfer_btn_bg"
        android:paddingVertical="18dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_from_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        android:background="?attr/colorImageBackground"
        android:scaleType="centerInside"
        android:src="@drawable/visa"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_from"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/btn_from"
        app:layout_constraintTop_toTopOf="@id/btn_from"
        app:shapeAppearanceOverlay="@style/CircleImageStyle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_from_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/cash"
        android:textColor="?attr/colorTertiary"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/iv_from_card"
        app:layout_constraintTop_toTopOf="@id/iv_from_card" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_from_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="350"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_from_card"
        app:layout_constraintStart_toStartOf="@id/tv_from_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_from_currency_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="$"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_from_amount"
        app:layout_constraintStart_toEndOf="@id/tv_from_amount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_from_hidden_digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="****"
        app:layout_constraintEnd_toStartOf="@id/tv_from_digits"
        app:layout_constraintTop_toTopOf="@id/tv_from_digits" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_from_digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="2345"
        app:layout_constraintBottom_toBottomOf="@id/btn_from"
        app:layout_constraintEnd_toEndOf="@id/btn_from"
        app:layout_constraintTop_toTopOf="@id/btn_from" />

</androidx.constraintlayout.widget.ConstraintLayout>